[--- Javascript ---]
var apiKey = '{{API_KEY}}',
    realtime = new Ably.Realtime({ key: apiKey }),
    channel = realtime.channels.get("publish:" + Math.random()),
    $status = $('#channel-status');

$('input#publish').on('click', function() {
  channel.publish('event', 'data', function(err) {
    if (err) {
      $status.append($('<div>').text('✗ Publish failed: ' + err.message).css('color', 'red'));
    } else {
  $status.append($('<div>').text('➡ Publish successful').css('color', 'green'));
    }
  });
});

channel.subscribe(function(message) {
  $status.append($('<div>').text('⬅ Received message on subscription').css('color', 'green'));
});
[--- /Javascript ---]

[--- HTML ---]
<script type="text/javascript" src="//cdn.ably.io/lib/ably.min.js"></script>
