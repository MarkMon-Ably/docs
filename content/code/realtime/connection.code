[--- Javascript ---]
$('input#connect').on('click', function() {
  var apiKey = '{{API_KEY}}',
      realtime = new Ably.Realtime({ key: apiKey });

  realtime.connection.on('connecting', function() {
    $('#realtime-status').
      text('Connecting to Ably').
      css('color', '#ff8c00');
  });

  realtime.connection.on('connected', function() {
    $('#realtime-status').
      text('âœ“ Connected to Ably with API Key: "' + apiKey + '"').
      css('color', 'green');
  });

  realtime.connection.on('disconnected', function() {
    $('#realtime-status').
      text('Disconnected from Ably').
      css('color', 'red');
  });
});
[--- /Javascript ---]

